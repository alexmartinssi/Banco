<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_extrato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.unipe.pos.banco.RealizarSaqueActivity">

    <RelativeLayout
        android:layout_width="369dp"
        android:layout_height="58dp"
        android:layout_weight="0.16"
        android:orientation="horizontal">


        <TextView
            android:text="Conta origem:         "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contaOrigem"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:id="@+id/numContaId"
            android:background="?attr/colorControlHighlight"
            android:inputType="number"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_alignBaseline="@+id/contaOrigem"
            android:layout_alignBottom="@+id/contaOrigem"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:orientation="horizontal">


        <TextView
            android:text="Informe o valor:      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valor"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:id="@+id/valorId"
            android:background="?attr/colorControlHighlight"
            android:inputType="numberDecimal"
            android:layout_alignTop="@+id/valor"
            android:layout_toRightOf="@+id/valor"
            android:layout_toEndOf="@+id/valor" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:orientation="horizontal">

    <Button
        android:text="Sacar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botaoRealizarSaqueId"
        android:layout_marginTop="60dp"
        style="@android:style/Theme.Black"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>
