<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_extrato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unipe.pos.banco.ConsultarSaldoActivity"
    android:weightSum="1">

    <TextView
        android:text="Saldo Atual das Contas Cadastradas"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:id="@+id/tituloId"
        android:gravity="center"
        android:background="?attr/colorButtonNormal" />

    <ListView
        android:id="@+id/listarContasId"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/tituloId">
    </ListView>

</LinearLayout>
